#!/usr/bin/env bash
# Configures an Ubuntu server as follows:
#   - localhost resolves to 127.0.0.2
#   - facebook.com resolves to 8.8.8.8

# Copy /etc/hosts to ~/hosts.new
cp /etc/hosts ~/hosts.new

# Modify ~/hosts.new using sed to configure DNS resolution
sed -i 's/127.*$/127.0.0.2 localhost\n8.8.8.8 facebook.com/' ~/hosts.new

# Overwrite the original /etc/hosts with the updated ~/hosts.new
cp -f ~/hosts.new /etc/hosts

echo "Hosts configuration completed successfully."
